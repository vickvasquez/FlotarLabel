*
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
body
	font-size 14px 
.abajo
	input
		padding 12px 12px 12px 12px

		&:focus
			padding 4px 6px 20px 6px
			+ label
				top 100%;
				margin-top -16px
	label
		top 0
		bottom 0
		left 0
		width 100%
form
	height 25 0px
	margin 0 auto
	width 300px
	margin-bottom 5px
	> div
		position:relative
		overflow: hidden

	input 
		position relative
		width 100%
		background none
		z-index: 1
		top 0
		left 0
		outline 0
		border 1px solid green
		padding 8px 12px

		&:valid
			background white
		&:focus
			border 2px solid #0080C0

		&:focus + label
			background #0080C0
			color white
			z-index 2
			font-size 70%
			padding 1px 6px
			text-transform uppercase
	label
		transition: background 0.2s, color 0.2s, top 0.2s, bottom 0.2s, right 0.2s, left 0.2s;
		position absolute
		color #000
		padding 7px 6px
.derecha
	input
		&:focus
			+label
				top 2px
				bottom 2px
				padding-top 10px
				padding-left 20px
				left 70%;
	label
		top 0
		bottom 0
		left 0
		width 100%
.izquierda
	input
		&:focus
			+ label
				text-align right
				padding-top 10px
				left -70%
	label
		top 2px
		bottom 2px
		width 100%

